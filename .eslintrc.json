{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["google", "plugin:playwright/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": ["error", { "code": 100 }],
        "require-jsdoc": "off",
        "object-curly-spacing": ["error", "always"],
        "require-await": "warn"
    }
}
